 */
?>
<?php $card = $this->getCard();

 ?>
<?php echo $this->getMessagesBlock()->getGroupedHtml(); ?>
<?php $currentDate = strtotime(Mage::getModel('core/date')->date('Y-m-d')); ?>
<?php if ($card->getId()): ?>
	<?php if($card->getStateText() == 'Used'){ ?>
		<p class="error-msg"><?php echo $this->__("Gift Card: %s", '<strong class="giftcard-number">' . $card->getCode() . '</strong> Already Used'); ?></p>
	<?php } else if ($card->isExpired()) { ?>
		<p class="error-msg"><?php echo $this->__("Gift Card: %s", '<strong class="giftcard-number">' . $card->getCode() . '</strong> was Expired'); ?></p>
	<?php } else if($card->getStatus() == 0){ ?>
		<p class="error-msg"><?php echo $this->__("Gift Card: %s", '<strong class="giftcard-number">' . $card->getCode() . '</strong> account is not enabled'); ?></p>
	<?php } else { ?>
    <div>
        <p class="success-msg"><?php echo $this->__("Gift Card: %s", '<strong class="giftcard-number">' . $card->getCode() . '</strong> Added Successfully!'); ?></p>
    </div>
	<?php } ?>
<?php else: ?>
    <p class="error-msg"><?php echo $this->__('Wrong or expired Gift Card Code.Cannot apply gift card.'); ?></p>
<?php endif; ?>
