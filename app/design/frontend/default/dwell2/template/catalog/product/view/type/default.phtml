<?php /* @var $this Mage_Catalog_Block_Product_View_Abstract */ ?>
<?php $_product = $this->getProduct() ?>
<?php echo $this->getChildHtml('product_type_data_extra') ?>
<?php $elt = $_product->getResource()->getAttribute('elt')->getFrontend()->getValue($_product) ?>
<?php if($elt!='No' && $_product->isAvailable()): ?>
	<p class="availability in-stock"><label><?php echo $this->__('Status:') ?></label><span id="stock_status"><?php echo $elt ?></span></p>
<?php else: ?>
	<?php if ($_product->isAvailable()): ?>
			<p class="availability in-stock"><label><?php echo $this->__('Status:') ?></label><span id="stock_status"><?php echo $this->__('This item is in stock and ready to ship') ?></span></p>
    	<?php if ($_product->getWeight() > 149 || $this->hasOverweightItems()) { ?>
    		<p id="special_shipping"><?php echo $this->__('Special Shipping is required for this item and it may ship separately from other items.') ?></p>
    	<?php } ?>
	<?php else: ?>
    	<br />
	<?php endif; ?>
<?php endif; ?>